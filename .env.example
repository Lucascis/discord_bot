DISCORD_TOKEN=your-bot-token
DISCORD_APPLICATION_ID=your-application-id
# Optional: faster command updates in dev
# DISCORD_GUILD_ID=your-dev-guild-id
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/discord
REDIS_URL=redis://redis:6379
LAVALINK_HOST=lavalink
LAVALINK_PORT=2333
LAVALINK_PASSWORD=youshallnotpass

# Health/metrics ports
GATEWAY_HTTP_PORT=3001
AUDIO_HTTP_PORT=3002
WORKER_HTTP_PORT=3003

# Tracing (optional)
# OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4318/v1/traces

# Roles
DJ_ROLE_NAME=DJ

# LavaSrc credentials (optional but recommended for premium resolution)
# Spotify Developer App → https://developer.spotify.com/dashboard
# Enable source only if you set credentials
SPOTIFY_ENABLED=false
# SPOTIFY_CLIENT_ID=your-spotify-client-id
# SPOTIFY_CLIENT_SECRET=your-spotify-client-secret

# Deezer ARL cookie (log in on https://www.deezer.com, export cookie `arl`)
# Enable only if ARL present
DEEZER_ENABLED=false
# DEEZER_ARL=your-deezer-arl-cookie

# Apple Music Media API Token (JWT) — see docs/SETUP.md for how to generate
# Enable only if token present
APPLE_ENABLED=false
# APPLE_MUSIC_MEDIA_TOKEN=your-apple-music-media-token

# UI/UX
# Interval for live Now Playing updates (ms). Reasonable range: 1000-60000
NOWPLAYING_UPDATE_MS=1000
