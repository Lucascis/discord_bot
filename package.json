{
  "name": "discord-music-bot",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.16.1",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm --filter gateway dev",
    "dev:all": "pnpm -r --parallel dev",
    "lint": "eslint .",
    "typecheck": "pnpm -r typecheck",
    "test": "vitest run",
    "start": "pnpm -r start",
    "postinstall": "pnpm --filter @discord-bot/database prisma:generate",
    "prepare": "husky install",
    "db:migrate": "pnpm --filter @discord-bot/database prisma:migrate",
    "db:seed": "pnpm --filter @discord-bot/database ts-node packages/database/prisma/seed.ts"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@discordjs/builders": "^1.11.3",
    "@types/express": "^5.0.3",
    "@types/node": "^20.5.9",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.3",
    "prettier": "^3.0.3",
    "ts-api-utils": "^2.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.8.4",
    "vitest": "^2.1.8"
  }
}
