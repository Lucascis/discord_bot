{
  "name": "discord-music-bot",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.16.1",
  "scripts": {
    "build": "pnpm -r build",
    "build:clean": "pnpm -r clean && pnpm build",
    "dev": "pnpm --filter gateway dev",
    "dev:all": "concurrently \"cd lavalink && java -jar Lavalink.jar\" \"pnpm -r --parallel dev\" --names \"lavalink,services\" --prefix-colors \"blue,green\"",
    "dev:all:sequential": "./scripts/start-all.sh",
    "dev:gateway": "pnpm --filter gateway dev",
    "dev:audio": "pnpm --filter audio dev",
    "dev:api": "pnpm --filter api dev",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "pnpm -r typecheck",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "start": "concurrently \"cd lavalink && java -jar Lavalink.jar\" \"pnpm -r start\" --names \"lavalink,services\" --prefix-colors \"blue,green\"",
    "start:prod": "NODE_ENV=production concurrently \"cd lavalink && java -jar Lavalink.jar\" \"pnpm -r start\" --names \"lavalink,services\" --prefix-colors \"blue,green\"",
    "start:perf": "cross-env NODE_ENV=production node --expose-gc --max-old-space-size=2048 dist/index.js",
    "clean": "pnpm -r clean",
    "check": "pnpm typecheck && pnpm lint && pnpm test",
    "check:ci": "pnpm install --frozen-lockfile && pnpm check",
    "deps:update": "pnpm update -r --latest",
    "deps:check": "pnpm outdated -r",
    "postinstall": "pnpm --filter @discord-bot/database prisma:generate",
    "prepare": "husky install",
    "db:migrate": "pnpm --filter @discord-bot/database prisma:migrate",
    "db:seed": "node --import 'data:text/javascript,import { register } from \"node:module\"; import { pathToFileURL } from \"node:url\"; register(\"ts-node/esm\", pathToFileURL(\"./\"));' packages/database/prisma/seed.ts",
    "db:reset": "pnpm --filter @discord-bot/database prisma:migrate reset",
    "db:studio": "pnpm --filter @discord-bot/database prisma:studio",
    "perf:monitor": "node --expose-gc scripts/performance-monitor.js",
    "perf:report": "node scripts/generate-perf-report.js"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@eslint/js": "^9.35.0",
    "@types/node": "^20.11.16",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "date-fns": "^4.1.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^9.0.0",
    "globals": "^16.4.0",
    "husky": "^8.0.3",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.8.4",
    "vitest": "^4.0.8"
  },
  "pnpm": {
    "overrides": {
      "esbuild": ">=0.25.0"
    },
    "ignoredBuiltDependencies": [
      "esbuild"
    ]
  },
  "dependencies": {
    "@snazzah/davey": "^0.1.6"
  }
}
