apiVersion: v1
kind: Secret
metadata:
  name: discord-bot-secrets
  namespace: discord-bot
type: Opaque
stringData:
  # Discord credentials (base64 encode these in production)
  DISCORD_TOKEN: "your-bot-token-here"
  DISCORD_APPLICATION_ID: "your-application-id-here"

  # Database credentials
  DATABASE_URL: "postgresql://user:password@postgres:5432/discord"

  # Lavalink password
  LAVALINK_PASSWORD: "youshallnotpass"

  # Optional: Stripe keys
  STRIPE_SECRET_KEY: "sk_live_..."
  STRIPE_WEBHOOK_SECRET: "whsec_..."

  # Optional: Sentry DSN
  SENTRY_DSN: "https://...@sentry.io/..."
---
# Note: In production, use sealed-secrets or external secret management
# kubectl create secret generic discord-bot-secrets \
#   --from-literal=DISCORD_TOKEN=your-token \
#   --from-literal=DISCORD_APPLICATION_ID=your-app-id \
#   --namespace=discord-bot
